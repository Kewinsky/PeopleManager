@page
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MyApp.Pages.People.DeleteModel
@attribute [Authorize]


@{
    ViewData["Title"] = "Delete Person";
}

<h1 class="mb-4">Confirm Deletion</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <h5 class="card-title mb-4">Are you sure you want to delete this person?</h5>
        <dl class="row">
            <dt class="col-sm-3 font-weight-bold">
                Full Name
            </dt>
            <dd class="col-sm-9">
                @Model.Person.FirstName @Model.Person.LastName
            </dd>
            <dt class="col-sm-3 font-weight-bold">
                Birthdate
            </dt>
            <dd class="col-sm-9">
                @Model.Person.DateOfBirth.ToString("yyyy-MM-dd")
            </dd>
            <dt class="col-sm-3 font-weight-bold">
                Gender
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Person.Gender)
            </dd>
            <dt class="col-sm-3 font-weight-bold">
                Phone Number
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Person.PhoneNumber)
            </dd>
            <dt class="col-sm-3 font-weight-bold">
                Email Address
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Person.Email)
            </dd>
        </dl>
    </div>
</div>

<div class="mt-4 d-flex gap-2 justify-content-start">
    <form method="post" class="d-inline">
        <input type="hidden" asp-for="Person.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    <a asp-page="./Index" class="btn btn-outline-secondary">Back to List</a>
</div>
